<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,   autofocus: true, required: true, label: false, placeholder: 'First name',    input_html: { :class => 'transparent' } %>
    <%= f.input :last_name,                     required: true, label: false, placeholder: 'Last name',     input_html: { :class => 'transparent' } %>
    <%= f.input :phone_number,                  required: true, label: false, placeholder: 'Phone number',  input_html: { :class => 'transparent' } %>
    <%= f.input :email,                         required: true, label: false, placeholder: 'Email',         input_html: { :class => 'transparent' } %>
    <%= f.input :password,                      required: true, label: false, placeholder: 'Password',      input_html: { :class => 'transparent' } %>
    <%= f.input :password_confirmation,         required: true, label: false, placeholder: 'Password confirmation', input_html: { :class => 'transparent' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", data: { disable_with: 'Please wait ...' } %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
