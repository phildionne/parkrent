<h2>Sign in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
  defaults: { label: false, input_html: { :class => 'transparent' }}) do |f| %>

  <div class="form-inputs">
    <%= f.input :email,    required: false, placeholder: 'Email', autofocus: true %>
    <%= f.input :password, required: false, placeholder: 'Password' %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", data: { disable_with: 'Please wait ...' } %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
