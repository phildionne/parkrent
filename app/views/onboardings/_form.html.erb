<div class="row">
  <%= simple_form_for @onboarding, url: onboarding_path do |f| %>

    <div class="col col-lg-6">
      <fieldset>
        <legend>Your informations</legend>

        <%= f.input :first_name, placeholder: 'first_name' %>

        <%= f.input :last_name, placeholder: 'last_name' %>

        <%= f.input :phone_number, placeholder: 'phone_number' %>

        <%= f.input :email, placeholder: 'email' %>
      </fieldset>
    </div>

    <div class="col col-lg-6">
      <fieldset>
        <legend>Your Parking</legend>

        <%= f.input :location, placeholder: 'location' %>

        <%= f.input :beginning, placeholder: 'beginning', input_html: { :class => 'js-datepicker' } %>

        <%= f.input :termination, placeholder: 'termination', input_html: { :class => 'js-datepicker' } %>

        <%= f.input :price, placeholder: 'price' %>

      </fieldset>

      <hr>

      <%= f.button :submit, 'Create listing', data: { disable_with: 'Please wait ...' }, :class => 'btn btn-primary btn-block' %>
    </div>

  <% end %>
</div><!-- /.row -->
