<%= simple_form_for @onboarding, url: onboarding_path do |f| %>

  <%= f.input :first_name,    as: :hidden %>
  <%= f.input :last_name,     as: :hidden %>
  <%= f.input :phone_number,  as: :hidden %>
  <%= f.input :email,         as: :hidden %>
  <%= f.input :location,      as: :hidden %>
  <%= f.input :beginning,     as: :hidden %>
  <%= f.input :termination,   as: :hidden %>
  <%= f.input :price,         as: :hidden %>

  <%= f.input :password, error: false, placeholder: 'password', autofocus: true %>

  <%= f.input :password_confirmation, error: false, placeholder: 'password_confirmation' %>

  <hr>

  <%= f.button :submit, 'Create listing', :disable_with => 'Please wait ...', :class => 'btn btn-primary btn-block' %>
<% end %>
