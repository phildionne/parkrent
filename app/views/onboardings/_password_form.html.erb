<%= simple_form_for @onboarding, url: onboarding_path do |f| %>

  <%= f.input :first_name,    as: :hidden %>
  <%= f.input :last_name,     as: :hidden %>
  <%= f.input :phone_number,  as: :hidden %>
  <%= f.input :email,         as: :hidden %>
  <%= f.input :location,      as: :hidden %>
  <%= f.input :start_time,    as: :hidden %>
  <%= f.input :end_time,      as: :hidden %>
  <%= f.input :price,         as: :hidden %>

  <%= f.input :password, placeholder: 'password', autofocus: true %>

  <%= f.input :password_confirmation, placeholder: 'password_confirmation' %>

  <hr>

  <%= f.button :submit, 'Create listing', data: { disable_with: 'Please wait ...' }, class: 'btn btn-primary btn-block' %>
<% end %>
