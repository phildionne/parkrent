<div class="row">
  <div class="col col-lg-8 col-offset-2">

    <div class="row">
      <div class="col col-lg-8 col-offset-2">

        <%= simple_form_for :search, url: parkings_path, method: :get, html: { :class => 'form-inline' } do |f| %>

          Search for parkings near <%= f.input :location, wrapper: false, input_html: { :class => 'form-control col-lg-6 transparent' }, placeholder: 'Québec, Grand Théâtre ...', label: false %>

          <%= f.input :distance,    input_html: { :class => 'transparent' }, placeholder: 'distance', label: false, required: false %>

          <%= f.input :begining,    input_html: { :class => 'transparent js-datepicker' }, placeholder: 'begining', label: false, required: false %>

          <%= f.input :termination, input_html: { :class => 'transparent js-datepicker' }, placeholder: 'termination', label: false, required: false %>

          <%= f.button :submit, 'Search', :disable_with => 'Please wait ...', :class => 'btn btn-default' %>
        <% end %>

      </div>
    </div>

  </div>
</div><!-- /.row -->
