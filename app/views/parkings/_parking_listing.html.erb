<%= content_tag_for(:article, parking) do %>
  <header>
    <h3><%= parking.location %></h3>
  </header>

  <%= render partial: 'rents/rent_listing', collection: parking.rents, as: :rent %>

  <footer>
    <% if parking.readable_by?(current_user) %>
      <%= link_to 'Show', parking_path(parking) %>
    <% end %>

    <% if parking.updatable_by?(current_user) %>
      <%= link_to 'Edit', edit_parking_path(parking) %>
    <% end %>

    <% if parking.deletable_by?(current_user) %>
      <%= link_to 'Destroy', parking_path(parking), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </footer>
<% end %>
