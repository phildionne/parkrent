<%= content_tag_for(:article, line_item) do %>
  <header></header>

  <ul>
    <li><%= line_item.quantity %></li>
  </ul>

  <footer>
    <%= link_to 'Show', line_item_path(line_item) %>
    <%= link_to 'Edit', edit_line_item_path(line_item) %>
    <%= link_to 'Destroy', line_item_path(line_item), method: :delete, data: { confirm: 'Are you sure?' } %>
  </footer>
<% end %>
