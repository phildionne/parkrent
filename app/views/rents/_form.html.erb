<%= simple_form_for [@parking, @rent] do |f| %>

    <%= f.input :price %>

    <%= f.input :beginning, as: :string, input_html: { :class => 'js-datepicker' } %>

    <%= f.input :termination, as: :string, input_html: { :class => 'js-datepicker' } %>

    <%= f.button :submit, :disable_with => 'Please wait ...', :class => 'btn btn-primary' %>
<% end %>
