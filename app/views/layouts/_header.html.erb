<header class="header">

  <div class="navbar">
    <div class="container">

      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <%= link_to 'ParkRent', root_path, :class => 'navbar-brand' %>

      <div class="nav-collapse collapse navbar-responsive-collapse"></div><!-- /.nav-collapse -->

      <p class="navbar-text pull-right">
        <% if user_signed_in? %>
          <%= t('layout.header.greeting') %>
          <%= link_to current_user.flexible_name, edit_user_registration_path, :class => 'navbar-link' %>
